@model SCM.Models.ViewModels.RoutingInstanceViewModel

@{
    ViewData["Title"] = "Details";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Infrastructure/Index">Infrastructure</a></li>
    <li class="breadcrumb-item"><a href="/InfrastructureAttachment/GetAll">Infrastructure Attachments - [@ViewBag.Attachment.Device.Name]</a></li>
    <li class="breadcrumb-item"><a href="/InfrastructureVif/GetAllByAttachmentID/@ViewBag.Attachment.AttachmentID">Infrastructure VIFs - [@ViewBag.Attachment.Name]</a></li>
    <li class="breadcrumb-item active">VRF - [@ViewBag.Vif.Name]</li>
</ol>

<h2>Details for VRF '@Model.Name'</h2>

@{await Html.RenderPartialAsync("_MessagingPartial");}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.RoutingInstanceType.IsVrf)
        {
        <dt>
            @Html.DisplayNameFor(model => model.AdministratorSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdministratorSubField)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedNumberSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedNumberSubField)
        </dd>
        }
    </dl>
</div>
<form asp-action="">
    <input type="hidden" asp-for="RoutingInstanceID" name="id" />
    <div class="form-actions no-color">
        @Html.ActionLink("Edit", "EditRoutingInstance", new { id = ViewBag.Vif.VifID }) |
        <a asp-controller="InfrastructureVif" asp-action="GetAllByAttachmentID" asp-route-id="@ViewBag.Vif.AttachmentID">Back to Infrastructure VIFs List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
