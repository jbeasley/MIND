@model IEnumerable<SCM.Models.ViewModels.TenantViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Tenants";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item active">Tenants</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Tenants</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TenantID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TenantID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TenantID }) |
                    @Html.ActionLink("Devices", "GetAllByTenantID", "TenantDevice", new { tenantID = item.TenantID }) |
                    @Html.ActionLink("Attachments", "GetAllByTenantID", "TenantAttachment", new { tenantID = item.TenantID }) |
                    @Html.ActionLink("Attachment Sets", "GetAllByTenantID", "AttachmentSet", new { id = item.TenantID }) |
                    @Html.ActionLink("Networks", "GetAllByTenantID", "TenantNetwork", new { id = item.TenantID }) |
                    @Html.ActionLink("Communities", "GetAllByTenantID", "TenantCommunity", new { id = item.TenantID }) |
                    @Html.ActionLink("Community Sets", "GetAllByTenantID", "TenantCommunitySet", new { id = item.TenantID }) |
                    @Html.ActionLink("Multicast Groups", "GetAllByTenantID", "TenantMulticastGroup", new { id = item.TenantID })
                </td>
            </tr>
        }
    </tbody>
</table>
