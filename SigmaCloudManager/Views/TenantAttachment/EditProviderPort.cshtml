@model SCM.Models.ViewModels.AttachmentPortUpdateViewModel

@{
    ViewData["Title"] = "Edit Attachment Port";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllByTenantID?tenantID=@ViewBag.Attachment.TenantID">Tenant Attachments - [@ViewBag.Attachment.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllInterfacesByAttachmentID/@ViewBag.Attachment.AttachmentID">Interfaces - [@ViewBag.Attachment.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllPortsByInterfaceID/@ViewBag.Interface.InterfaceID">Ports - [@ViewBag.Interface.Name]</a></li>
    <li class="breadcrumb-item active">Edit Port - [@Model.FullName]</li>
</ol>

<h2>Edit Port '@Model.FullName'</h2>

<form asp-action="EditProviderPort">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="AttachmentID" />
        <input type="hidden" asp-for="InterfaceID" />
        <input type="hidden" asp-for="CurrentPortID" />
        <input type="hidden" asp-for="LocationID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-group">
            <label asp-for="Plane" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PlaneID" class="form-control" asp-items="ViewBag.PlaneID">
                    <option value="">-- Optionally Select a Plane --</option>
                </select>
                <span asp-validation-for="PlaneID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Device" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DeviceID" class="form-control" asp-items="ViewBag.DeviceID">
                    <option value="">-- Select a Device --</option>
                </select>
                <span asp-validation-for="DeviceID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Port" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortID" class="form-control" asp-items="ViewBag.PortID">
                    <option value="">-- Select a Port --</option>
                </select>
                <span asp-validation-for="PortID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Edit" class="btn btn-success" asp-action="EditProviderPort">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;Save
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllPortsByInterfaceID" asp-route-id="@ViewBag.Interface.InterfaceID">Back to Ports List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">

    (function ($) {

        var $attachment = $('#AttachmentID'),
            attachment = $attachment[0],
            $plane = $('#PlaneID'),
            plane = $plane[0],
            $location = $('#LocationID'),
            location = $location[0],
            $device = $('#DeviceID'),
            device = $device[0],
            $port = $('#PortID'),
            port = $port[0],
            $currentPort = $('#CurrentPortID'),
            currentPort = $currentPort[0];

            // Initialise all tool-tips

            $('[data-toggle="tooltip"]').tooltip();

            $plane.on('change', function (e) {

                device.selectedIndex = 0;
                device.disabled = true;
                port.selectedIndex = 0;
                port.disabled = true;
                var planeID = this.value;

                if (planeID == null || planeID == "") {

                    PopulateHtmlFromUrl($device, "/TenantAttachment/Devices", { locationID: location.value });
                }
                else {
     
                    PopulateHtmlFromUrl($device, "/TenantAttachment/Devices", { locationID: location.value, planeID: planeID });
                }
            });

            $device.on('change', function (e) {

                var deviceID = this.value;

                if (deviceID == null || deviceID == "") {

                    port.selectedIndex = 0;
                    port.disabled = true;
                }
                else {

                    PopulateHtmlFromUrl($port, "/TenantAttachment/Ports", { deviceID: deviceID, portID: currentPort.value });
                }
            });

            function PopulateHtmlFromUrl($e, url, data) {

                $.get(url, data)
                    .done(function (data) {

                        // Enable the html element to be populated
                        $e[0].disabled = false;

                        $e.html(data);
                    });
            }
 
        }(jQuery));

</script>

}