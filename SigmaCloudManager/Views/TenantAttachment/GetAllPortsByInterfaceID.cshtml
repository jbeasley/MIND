@model IEnumerable<SCM.Models.ViewModels.PortViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Attachment Ports";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllByTenantID?tenantID=@ViewBag.Attachment.TenantID">Tenant Attachments - [@ViewBag.Attachment.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllInterfacesByAttachmentID/@ViewBag.Attachment.AttachmentID">Interface - [@ViewBag.Attachment.Name]</a></li>
    <li class="breadcrumb-item active">Ports - [@ViewBag.Interface.Name]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Ports for Interface '@ViewBag.Interface.Name'</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Device)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Device.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.PortRole.Name == "Tenant-Facing")
                    {
                        @Html.ActionLink("Edit", "EditProviderPort", new { id = item.ID })
                    }
                    else if (item.PortRole.Name == "Tenant-Infrastructure")
                    {
                        @Html.ActionLink("Edit", "EditTenantPort", new { id = item.ID })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="GetAllInterfacesByAttachmentID" asp-route-id="@ViewBag.Attachment.AttachmentID">Back to Interfaces</a>
</div>