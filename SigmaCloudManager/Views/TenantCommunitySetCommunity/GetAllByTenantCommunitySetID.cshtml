@model IEnumerable<SCM.Models.ViewModels.TenantCommunitySetCommunityViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Tenant Community Set Communities";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantCommunitySet/GetAllByTenantID/@ViewBag.TenantCommunitySet.TenantID">Community Sets - [@ViewBag.TenantCommunitySet.Tenant.Name]</a></li>
    <li class="breadcrumb-item active">Communities - [@ViewBag.TenantCommunitySet.Name]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Communities for Tenant Community Set '@ViewBag.TenantCommunitySet.Name'</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.TenantCommunitySet.TenantCommunitySetID">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenantCommunity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantCommunity.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.TenantCommunitySetCommunityID }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.TenantCommunitySetCommunityID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="TenantCommunitySet" asp-action="GetAllByTenantID" asp-route-id="@ViewBag.TenantCommunitySet.TenantID">Back to Tenant Community Sets</a>
</div>
