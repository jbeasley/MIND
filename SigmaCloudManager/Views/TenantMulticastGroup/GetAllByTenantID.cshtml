@model IEnumerable<SCM.Models.ViewModels.TenantMulticastGroupViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Tenant Multicast Groups";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item active">Multicast Groups - [@ViewBag.Tenant.Name]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Multicast Groups for Tenant '@ViewBag.Tenant.Name'</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.Tenant.TenantID">Create New</a>
</p>

@using (Html.BeginForm("GetAllByTenantID", "TenantMulticastGroup", FormMethod.Get))
{
    <p>
        Multicast Group Range: @Html.TextBox("SearchString")
        <button type="submit" class="btn btn-info btn-default ">
            <span class="glyphicon glyphicon-search"></span>&nbsp;Search
        </button>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsSsmGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowExtranet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSsmGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourceAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourceMask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupMask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowExtranet)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TenantMulticastGroupID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TenantMulticastGroupID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TenantMulticastGroupID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Tenant" asp-action="GetAll">Back to Tenants</a>
</div>
