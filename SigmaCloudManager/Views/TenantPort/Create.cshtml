@model SCM.Models.ViewModels.PortViewModel

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantDevice/GetAllByTenantID?tenantID=@ViewBag.Device.TenantID">Devices - [@ViewBag.Device.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantPort/GetAllByDeviceID/@ViewBag.Device.DeviceID">Ports - [@ViewBag.Device.Name]</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>

<h2>Create Port for '@ViewBag.Device.Name'</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="DeviceID" value="@ViewBag.Device.DeviceID" />
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortBandwidth" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortBandwidthID" class="form-control" asp-items="ViewBag.PortBandwidthID">
                    <option value="">-- Select Port Bandwidth (Gbps) --</option>
                </select>
                <span asp-validation-for="PortBandwidthID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortConnector" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortConnectorID" class="form-control" asp-items="ViewBag.PortConnectorID">
                    <option value="">-- Select Port Connector --</option>
                </select>
                <span asp-validation-for="PortConnectorID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortSfp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortSfpID" class="form-control" asp-items="ViewBag.PortSfpID">
                    <option value="">-- Select Port SFP --</option>
                </select>
                <span asp-validation-for="PortSfpID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortStatus" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortStatusID" class="form-control" asp-items="ViewBag.PortStatusID">
                    <option value="">-- Select Port Status --</option>
                </select>
                <span asp-validation-for="PortStatusID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortRole" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortRoleID" class="form-control" asp-items="ViewBag.PortRoleID">
                    <option value="">-- Select Port Role --</option>
                </select>
                <span asp-validation-for="PortRoleID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortPool" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortPoolID" class="form-control" asp-items="ViewBag.PortPoolID">
                    <option value="">-- Select Port Pool --</option>
                </select>
                <span asp-validation-for="PortPoolID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Create" class="btn btn-success" asp-action="Create">
                    <span class="glyphicon glyphicon-plus"></span>&nbsp;Create
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByDeviceID" asp-route-id="@ViewBag.Device.DeviceID">Back to Ports List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">

    (function ($) {

        var $portRole = $('#PortRoleID'),
            portRole = $portRole[0],
            $portPool = $('#PortPoolID'),
            portPool = $portPool[0];

        // Initialise all tool-tips

        $('[data-toggle="tooltip"]').tooltip();

        if (portPool.value == null || portPool.value == "") {

            portPool.disabled = true;
        }

        $portRole.on('change', function (e) {

            portPool.selectedIndex = 0;
            portPool.disabled = true;
            var portRoleID = this.value;

            if (portRoleID.length > 0) {
               
                PopulateHtmlFromUrl($portPool, "/TenantPort/PortPools", { portRoleID: portRoleID });
            }
        });

        function PopulateHtmlFromUrl($e, url, data) {

            $.get(url, data)
                .done(function (data) {

                    // Enable the html element to be populated
                    $e[0].disabled = false;

                    $e.html(data);
                });
        }

        }(jQuery));

</script>

}
