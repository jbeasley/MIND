@model IEnumerable<SCM.Models.ViewModels.BgpPeerViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "BGP Peers";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllByTenantID?tenantID=@ViewBag.Attachment.TenantID">Tenant Attachments - [@ViewBag.Attachment.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantVif/GetAllByAttachmentID/@ViewBag.Vif.AttachmentID">Tenant VIFs - [@ViewBag.Attachment.Name]</a></li>
    <li class="breadcrumb-item active">BGP Peers - [@ViewBag.Vif.Name]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>BGP Peers for VRF '@ViewBag.Vif.RoutingInstance.Name'</h2>

<p>
    <a asp-action="Create" asp-route-vrfID="@ViewBag.Vif.RoutingInstanceID" asp-route-vifID="@ViewBag.Vif.VifID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoutingInstance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutonomousSystem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumRoutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBfdEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoutingInstance.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IpAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AutonomousSystem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumRoutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBfdEnabled)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { bgpPeerID = item.BgpPeerID, vifID = ViewBag.Vif.VifID }) |
                    @Html.ActionLink("Details", "Details", new { bgpPeerID = item.BgpPeerID, vifID = ViewBag.Vif.VifID }) |
                    @Html.ActionLink("Delete", "Delete", new { bgpPeerID = item.BgpPeerID, vifID = ViewBag.Vif.VifID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="GetAllByAttachmentID" asp-controller="TenantVif"
       asp-route-id="@ViewBag.Vif.AttachmentID">Back to Tenant VIFs</a>
</div>
