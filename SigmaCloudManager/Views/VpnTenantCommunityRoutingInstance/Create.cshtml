@model SCM.Models.ViewModels.VpnTenantCommunityRoutingInstanceViewModel

@{
    ViewData["Title"] = "Add Tenant Community";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@ViewBag.AttachmentSet.TenantID">Attachment Sets- [@ViewBag.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantCommunityRoutingInstance/GetAllByAttachmentSetID/@ViewBag.AttachmentSet.AttachmentSetID">Tenant Communities VRF Policy - [@ViewBag.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">Add Tenant Community</li>
</ol>

<h2>Add a Tenant Network to Attachment Set '@ViewBag.AttachmentSet.Name'</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="AttachmentSetID" value="@ViewBag.AttachmentSet.AttachmentSetID" />
        <div class="form-group">
            <label asp-for="Tenant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantID" class="form-control" asp-items="ViewBag.TenantID">
                    <option value="">-- Select Tenant --</option>
                </select>
                <span asp-validation-for="TenantID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TenantCommunity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantCommunityID" class="form-control" asp-items="ViewBag.TenantCommunityID">
                    <option value="">-- Select Tenant Community --</option>
                </select>
                <span asp-validation-for="TenantCommunityID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TenantCommunitySet" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantCommunitySetID" class="form-control" asp-items="ViewBag.TenantCommunitySetID">
                    <option value="">-- Or Select Tenant Community Set --</option>
                </select>
                <span asp-validation-for="TenantCommunitySetID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoutingInstance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoutingInstanceID" class="form-control" asp-items="ViewBag.RoutingInstanceID">
                    <option value="">-- Select VRF --</option>
                </select>
                <span asp-validation-for="RoutingInstanceID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LocalIpRoutingPreference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LocalIpRoutingPreference" class="form-control" />
                <span asp-validation-for="LocalIpRoutingPreference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Add" class="btn btn-success" asp-action="Create">
                    <span class="glyphicon glyphicon-plus"></span>&nbsp;Add
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByAttachmentSetID" asp-route-id="@ViewBag.AttachmentSet.AttachmentSetID" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        (function ($) {

            // Initialise all tool-tips

            $('[data-toggle="tooltip"]').tooltip();

            var $tenant = $('#TenantID'),
                tenant = $tenant[0],
                $tenantCommunity = $('#TenantCommunityID'),
                tenantCommunity = $tenantCommunity[0],
                $tenantCommunitySet = $('#TenantCommunitySetID'),
                tenantCommunitySet = $tenantCommunitySet[0];

            if (!$('#TenantCommunityID option').length || tenant.value == null || tenant.value == "") {

                tenantCommunity.disabled = true;
            }

            if (!$('#TenantCommunitySetID option').length || tenant.value == null || tenant.value == "") {

                tenantCommunitySet.disabled = true;
            }

            $tenant.on('change', function (e) {

                tenantCommunity.selectedIndex = 0;
                tenantCommunity.disabled = true;
                tenantCommunitySet.selectedIndex = 0;
                tenantCommunitySet.disabled = true;
                PopulateTenantCommunitiesDropDownList(this.value);
                PopulateTenantCommunitySetsDropDownList(this.value);
            });

            function PopulateTenantCommunitiesDropDownList(tenantID) {

                if (tenantID != null && tenantID.length > 0) {

                    PopulateHtmlFromUrl($tenantCommunity, "/VpnTenantCommunityRoutingInstance/TenantCommunities", { tenantID: tenantID });
                }
            }

            function PopulateTenantCommunitySetsDropDownList(tenantID) {

                if (tenantID != null && tenantID.length > 0) {

                    PopulateHtmlFromUrl($tenantCommunitySet, "/VpnTenantCommunityRoutingInstance/TenantCommunitySets", { tenantID: tenantID });
                }
            }

            $tenantCommunity.on('change', function (e) {

                var tenantCommunityID = this.value;
                if (tenantCommunityID.length > 0) {

                    tenantCommunitySet.selectedIndex = 0;
                }
            });

            $tenantCommunitySet.on('change', function (e) {

                var tenantCommunitySetID = this.value;
                if (tenantCommunitySetID.length > 0) {

                    tenantCommunity.selectedIndex = 0;
                }
            });

            function PopulateHtmlFromUrl($e, url, data) {

                $.get(url, data)
                    .done(function (data) {

                        // Enable the html element to be populated
                        $e[0].disabled = false;

                        $e.html(data);
                    });
            }

        }(jQuery));

    </script>
}
