@model SCM.Models.ViewModels.VpnTenantMulticastGroupViewModel

@{
    ViewData["Title"] = "Add Multicast Group";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@ViewBag.AttachmentSet.TenantID">Attachment Sets- [@ViewBag.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantMulticastGroup/GetAllByAttachmentSetID/@ViewBag.VpnAttachmentSetID">Multicast Groups - [@ViewBag.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">Add Multicast Group Range</li>
</ol>

<h2>Add a Tenant Multicast Group to Attachment Set '@ViewBag.AttachmentSet.Name' </h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="AttachmentSetID" value="@ViewBag.AttachmentSet.AttachmentSetID" />
        <div class="form-group">
            <label asp-for="TenantMulticastGroup" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantMulticastGroupID" class="form-control" asp-items="ViewBag.TenantMulticastGroupID">
                    <option value="">-- Select Tenant Multicast Group --</option>
                </select>
                <span asp-validation-for="TenantMulticastGroupID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MulticastVpnRp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MulticastVpnRpID" class="form-control" asp-items="ViewBag.MulticastVpnRpID">
                    <option value="">-- Select VPN Rendezvous-Point --</option>
                </select>
                <span asp-validation-for="MulticastVpnRpID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MulticastGeographicalScope" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MulticastGeographicalScopeID" class="form-control" asp-items="ViewBag.MulticastGeographicalScopeID">
                    <option value="">-- Optionally Select Geographical Scope --</option>
                </select>
                <span asp-validation-for="MulticastGeographicalScopeID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Add" class="btn btn-success" asp-action="Create">
                    <span class="glyphicon glyphicon-plus"></span>&nbsp;Add
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByAttachmentSetID" asp-route-id="@ViewBag.AttachmentSet.AttachmentSetID">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}