@model IEnumerable<SCM.Models.ViewModels.VpnTenantMulticastGroupViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Tenant Multicast Groups";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@ViewBag.AttachmentSet.TenantID">Attachment Sets- [@ViewBag.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item active">Multicast Groups - [@ViewBag.AttachmentSet.Name]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}


<h2>Multicast Group Ranges for Tenant '@ViewBag.AttachmentSet.Tenant.Name'</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.AttachmentSet.AttachmentSetID">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenantMulticastGroup.SourceAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenantMulticastGroup.SourceMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenantMulticastGroup.GroupAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenantMulticastGroup.GroupMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MulticastGeographicalScope)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantMulticastGroup.SourceAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantMulticastGroup.SourceMask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantMulticastGroup.GroupAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantMulticastGroup.GroupMask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MulticastGeographicalScope.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VpnTenantMulticastGroupID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.VpnTenantMulticastGroupID }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.VpnTenantMulticastGroupID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="AttachmentSet" asp-action="GetAllByTenantID" asp-route-id="@ViewBag.AttachmentSet.TenantID">Back to Attachment Sets</a>
</div>