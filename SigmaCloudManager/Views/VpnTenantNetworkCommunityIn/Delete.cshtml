@model SCM.Models.ViewModels.VpnTenantNetworkCommunityInViewModel

@{
    ViewData["Title"] = "Delete";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@Model.VpnTenantNetworkIn.AttachmentSet.TenantID">Attachment Sets- [@Model.VpnTenantNetworkIn.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetworkIn/GetAllByAttachmentSetID/@Model.VpnTenantNetworkIn.AttachmentSetID">Tenant Network Inbound Policy - [@Model.VpnTenantNetworkIn.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetworkCommunityIn/GetAllByVpnTenantNetworkInID/@Model.VpnTenantNetworkIn.VpnTenantNetworkInID">VPN Tenant Network Communities - [@Model.VpnTenantNetworkIn.TenantNetwork.CidrName]</a></li>
    <li class="breadcrumb-item active">Delete - [@Model.TenantCommunity.Name]</li>
</ol>

<h2>Remove Tenant Community '@Model.TenantCommunity.Name'</h2>
<h3>Are you sure you want to remove this Tenant Community from Tenant Network '@Model.VpnTenantNetworkIn.TenantNetwork.CidrName' ?</h3>
<div>
    <hr />
    @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenantCommunity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenantCommunity.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VpnTenantNetworkCommunityInID" />
        <input type="hidden" asp-for="VpnTenantNetworkInID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <button type="submit" id="Delete" class="btn btn-info btn-danger" asp-action="Delete">
                <span class="glyphicon glyphicon-remove"></span>&nbsp;Remove
            </button> |
            <a asp-action="GetAllByVpnTenantNetworkInID" asp-route-id="@Model.VpnTenantNetworkInID">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}