@model IEnumerable<SCM.Models.ViewModels.VpnTenantNetworkCommunityInViewModel>
@inject IOptions<ApplicationConfiguration> ApplicationConfiguration
@using Microsoft.Extensions.Options;
@using SCM;

@{
    ViewData["Title"] = "Tenant Networks";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@ViewBag.VpnTenantNetworkIn.AttachmentSet.TenantID">Attachment Sets- [@ViewBag.VpnTenantNetworkIn.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetworkIn/GetAllByAttachmentSetID/@ViewBag.VpnTenantNetworkIn.AttachmentSetID">Tenant Network Inbound Policy - [@ViewBag.VpnTenantNetworkIn.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">VPN Tenant Network Communities - [@ViewBag.VpnTenantNetworkIn.TenantNetwork.CidrName]</li>
</ol>

@if (ApplicationConfiguration.Value.EnableNetworkSync)
{

    // Show Network messages if Network Sync functionality is enabled
    await Html.RenderPartialAsync("_NetworkMessagingPartial");
}

@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Communities for Tenant Network '@ViewBag.VpnTenantNetworkIn.TenantNetwork.CidrName'</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.VpnTenantNetworkIn.VpnTenantNetworkInID">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VpnTenantNetworkIn.TenantNetwork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenantCommunity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VpnTenantNetworkIn.TenantNetwork.CidrName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantCommunity.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.VpnTenantNetworkCommunityInID }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.VpnTenantNetworkCommunityInID })
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="VpnTenantNetworkIn" asp-action="GetAllByAttachmentSetID" asp-route-id="@ViewBag.VpnTenantNetworkIn.AttachmentSetID">Back to Tenant Network Inbound Policy</a>