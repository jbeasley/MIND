@model SCM.Models.ViewModels.VpnTenantNetworkStaticRouteRoutingInstanceViewModel

@{
    ViewData["Title"] = "Delete";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@Model.AttachmentSet.TenantID">Attachment Sets- [@Model.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetwork/GetAllByVpnAttachmentSetID/@Model.AttachmentSet.AttachmentSetID">Tenant Network Static Routes - [@Model.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">Remove - [@Model.TenantNetwork.CidrName]</li>
</ol>

<h2>Remove Static Route for Network '@Model.TenantNetwork.CidrName' from VRF</h2>
<h3>Are you sure you want to remove this Static Route?</h3>
<div>
    <hr />
    @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenantNetwork)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenantNetwork.CidrName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VpnTenantNetworkStaticRouteRoutingInstanceID" />
        <input type="hidden" asp-for="AttachmentSetID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <button type="submit" id="Delete" class="btn btn-info btn-danger" asp-action="Delete">
                <span class="glyphicon glyphicon-remove"></span>&nbsp;Remove
            </button> |
            <a asp-action="GetAllByAttachmentSetID" asp-route-id="@Model.AttachmentSetID">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}