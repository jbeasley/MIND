@model SCM.Models.ViewModels.VpnTenantNetworkStaticRouteRoutingInstanceViewModel

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@Model.AttachmentSet.TenantID">Attachment Sets- [@Model.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetworkIn/GetAllByAttachmentSetID/@Model.AttachmentSetID">Tenant Network Static Routes - [@Model.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">Edit - [@Model.TenantNetwork.CidrName]</li>
</ol>

<h2>Edit Inbound Policy for Network '@Model.TenantNetwork.CidrName'</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="VpnTenantNetworkStaticRouteRoutingInstanceID" />
        <input type="hidden" asp-for="TenantNetworkID" />
        <input type="hidden" asp-for="AttachmentSetID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-group">
            <label asp-for="NextHopAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NextHopAddress" class="form-control" data-toggle="tooltip" data-placement="right" title="Enter a next-hop IP address for a static route" />
                <span asp-validation-for="NextHopAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <label class="checkbox-inline">
                    <input type="checkbox" asp-for="IsBfdEnabled" data-toggle="tooltip"
                           title="Select for a static route which is enabled with BFD fast-failure detection.">
                    <label asp-for="IsBfdEnabled"></label>
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <label class="checkbox-inline">
                    <input type="checkbox" asp-for="AddToAllRoutingInstancesInAttachmentSet" data-toggle="tooltip"
                           title="Select for a static route which should be placed in all VRFs in the Attachment Set.">
                    <label asp-for="AddToAllRoutingInstancesInAttachmentSet"></label>
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoutingInstance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoutingInstanceID" class="form-control" asp-items="ViewBag.RoutingInstanceID">
                    <option value="">-- Optionally Select VRF --</option>
                </select>
                <span asp-validation-for="RoutingInstanceID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Edit" class="btn btn-success" asp-action="Edit">
                    <span class="glyphicon glyphicon-save"></span>&nbsp;Save
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByAttachmentSetID" asp-route-id="@Model.AttachmentSetID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">

        (function ($) {

            // Initialise all tool-tips

            $('[data-toggle="tooltip"]').tooltip();

            var $vrf = $('#RoutingInstanceID'),
                vrf = $vrf[0],
                $addToAllRoutingInstances = $('#AddToAllRoutingInstancesInAttachmentSet'),
                addToAllRoutingInstances = $addToAllRoutingInstances[0];

            if (addToAllRoutingInstances.checked) {

                vrf.disabled = true;
            }

            $addToAllRoutingInstances.on('click', function (e) {

                if (this.checked) {

                    vrf.selectedIndex = 0;
                    vrf.disabled = true;
                }
                else {

                    vrf.disabled = false;
                }
            });

        }(jQuery));

</script>
}
