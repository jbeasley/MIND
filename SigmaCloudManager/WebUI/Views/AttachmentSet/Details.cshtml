@model Mind.WebUI.Models.AttachmentSetViewModel

@{
    ViewData["Title"] = "Attachment Set Details";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID?tenantId=@Model.TenantId">Attachment Sets - [@Model.TenantName]</a></li>
    <li class="breadcrumb-item active">Details - [@Model.Name]</li>
</ol>

<h2>Details for Attachment Set '@Model.Name'</h2>

@{await Html.RenderPartialAsync("_MessagingPartial");}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AttachmentRedundancy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AttachmentRedundancy)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsLayer3)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsLayer3)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubRegion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubRegion)
        </dd>
    </dl>
    <br />
    <h3>@Html.DisplayNameFor(model => model.AttachmentSetRoutingInstances)</h3>
    <hr />
    @foreach (var item in Model.AttachmentSetRoutingInstances)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(x => item.RoutingInstance.Name)
            </dt>
            <dd>
                @Html.DisplayFor(x => item.RoutingInstance.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(x => item.RoutingInstance.ProviderDomainLocationName)
            </dt>
            <dd>
                @Html.DisplayFor(x => item.RoutingInstance.ProviderDomainLocationName)
            </dd>
            <dt>
                @Html.DisplayNameFor(x => item.RoutingInstance.ProviderPlaneName)
            </dt>
            <dd>
                @Html.DisplayFor(x => item.RoutingInstance.ProviderPlaneName)
            </dd>
        </dl>
        <hr />
    }
    </div>
<form asp-action="">
    <div class="form-actions no-color">
        <a asp-action="GetAllByTenantID" asp-route-tenantID="@Model.TenantId">Back to Attachment Sets List</a>
    </div>
</form>