@model SCM.Models.ViewModels.AttachmentSetRoutingInstanceViewModel
@{
    ViewData["Title"] = "Add VRF #2";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@ViewBag.AttachmentSet.TenantID">Attachment Sets - [@ViewBag.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSetRoutingInstance/GetAllByAttachmentSetID/@ViewBag.AttachmentSet.AttachmentSetID">Attachment Set VRFs - [@ViewBag.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>
<h2>Add VRF to Attachment Set '@ViewBag.AttachmentSet.Name'</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="AttachmentSetID" value="@ViewBag.AttachmentSet.AttachmentSetID" />
        <input type="hidden" name="TenantID" value="@ViewBag.AttachmentSetRoutingInstanceRequest.TenantID" />
        <input type="hidden" name="PlaneID" value="@ViewBag.AttachmentSetRoutingInstanceRequest.PlaneID" />
        <input type="hidden" name="LocationID" value="@ViewBag.AttachmentSetRoutingInstanceRequest.LocationID" />
        <div class="form-group">
            <label asp-for="RoutingInstance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoutingInstanceID" class="form-control" asp-items="ViewBag.RoutingInstanceID">
                    <option value="">-- Select a VRF --</option>
                </select>
                <span asp-validation-for="RoutingInstanceID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AdvertisedIpRoutingPreference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdvertisedIpRoutingPreference" class="form-control" />
                <span asp-validation-for="AdvertisedIpRoutingPreference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LocalIpRoutingPreference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LocalIpRoutingPreference" class="form-control" />
                <span asp-validation-for="LocalIpRoutingPreference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MulticastDesignatedRouterPreference" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MulticastDesignatedRouterPreference" class="form-control" />
                <span asp-validation-for="MulticastDesignatedRouterPreference" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Create" class="btn btn-success" asp-action="Create">
                    <span class="glyphicon glyphicon-plus"></span>&nbsp;Add
                </button>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="GetAllByAttachmentSetID" asp-route-id="@ViewBag.AttachmentSet.AttachmentSetID">Back to VRFs</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
