@model IEnumerable<Mind.WebUI.Models.InfrastructureRoutingInstanceViewModel>
@{
    ViewData["Title"] = "Infrastructure Routing";
}
<div id="crumbs">
    <ul>
        <li><a href="/Home"><i class="fa fa-home" aria-hidden="true"></i></a></li>
        <li><a href="/InfrastructureServices"><i class="fa" aria-hidden="true"></i>Infrastructure Services</a></li>
        <li><a href="/InfrastructureDevice/GetAll"><i class="fa" aria-hidden="true"></i>Infrastructure Devices</a></li>
        <li><a href="#"><i class="fa active" aria-hidden="true"></i>Routing Instances - [@ViewBag.Device.Name]</a></li>
    </ul>
</div>
@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Infrastructure Routing Instances for Device '@ViewBag.Device.Name'</h2>

<table class="table table-striped table-hover mind-grid" id="mainGrid">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDefault)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="mind-grid-body-scroll-lg">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="custom-control custom-checkbox">
                        <input id="routingInstance_checkbox_@item.RoutingInstanceId" type="checkbox" class="form-check-input custom-control-input"
                               data-property-val="@item.RoutingInstanceId" data-query-parameter="routingInstanceId=@item.RoutingInstanceId" />
                        <label class="form-check-label custom-control-label" for="routingInstance_checkbox_@item.RoutingInstanceId"></label>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDefault)
                </td>
                <td colspan="2" align="right">
                    <a mind-grid-btn-link="true" asp-action="Edit" asp-route-routingInstanceId="@item.RoutingInstanceId">Edit</a>
                    <a mind-grid-btn-link="true" asp-action="Details" asp-route-routingInstanceId="@item.RoutingInstanceId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="hidden" name="deviceId" id="deviceId" value="@ViewBag.Device.DeviceId" />
<div class="card-deck" style="width: 27%">
    <a href="/#" data-href="/InfrastructureRoutingInstance/EditBgpPeers?" class="card custom-card bg-light">
        <img class="card-img-top mx-auto d-block" src="~/images/infrastructure-bgp.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title text-center">BGP Peers</h5>
            <p class="card-text">Create and manage the lifecycle of BGP peers</p>
        </div>
    </a>
</div>
<br />
<a mind-nav-link-back-btn="true" asp-controller="InfrastructureDevice" asp-action="GetAll">Back to Devices</a>

<!-- Loading Spinner partial view -->
@{await Html.RenderPartialAsync("_LoadingSpinnerPartial");}

<!-- List item selection modal messages partial view -->
@{await Html.RenderPartialAsync("_ListItemsModalMessagesPartial");}

@section Scripts {

    @{await Html.RenderPartialAsync("_InfrastructureRoutingInstanceMainScriptsPartial");}

}
