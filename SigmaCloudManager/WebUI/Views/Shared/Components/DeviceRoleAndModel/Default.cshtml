@using Mind.WebUI.Models;
@model DeviceRoleAndModelComponentViewModel

<!-- View component for selecting the role and model of a device -->

<div mind-alert="info" message="Select a model for the device.">
</div>
<div class="form-group row">
    <label asp-for="DeviceModel" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="DeviceModel" class="form-control" asp-items="ViewBag.DeviceModel">
            <option value="">-- Select Device Model --</option>
        </select>
        <span asp-validation-for="DeviceModel" class="text-danger"></span>
    </div>
</div>
<div mind-alert="info" message="Select a role for device.">
</div>
<div class="form-group row">
    <label asp-for="DeviceRole" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <select asp-for="DeviceRole" class="form-control" asp-items="ViewBag.DeviceRole">
            <option value="">-- Select Device Role --</option>
        </select>
        <span asp-validation-for="DeviceRole" class="text-danger"></span>
    </div>
</div>