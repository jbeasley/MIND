@model IEnumerable<Mind.WebUI.Models.VpnAttachmentSetRequestViewModel>

<h3>Attachment Sets</h3>
<section id="attachment-sets">
    <br />
    <div class="alert alert-info" role="alert">
        Select tenants and attachment sets to add to the VPN. When an attachment set is added to the VPN, the sites which are 
        connected to Sigma via the attachments or vifs which belong to the attachment set will be activated for the VPN.
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tenant Name</label>
        <div class="col-sm-10">
            <select class="form-control" id="TenantName" asp-items="ViewBag.ParticipantTenant" data-toggle="tooltip"
                    title="Select a tenant with attachment sets that you wish to add to the VPN" data-placement="right">
                <option value="">-- Select Tenant --</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select disabled class="form-control" id="AttachmentSet" asp-items="ViewBag.AttachmentSet" data-toggle="tooltip"
                    title="Select an attachment set to add to this VPN" data-placement="right">
                <option value="">-- Select Attachment Set --</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <span class="col-sm-2"></span>
        <div class="col-sm-10">
            <button type="button" id="addAttachmentSet" class="btn btn-secondary btn-sm"><i class="fas fa-plus-square"></i>&nbsp;Add to VPN</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12 mind-grid-y-scrollable">
            <table id="grid" class="table table-condensed table-hover table-striped mind-grid">
                <thead>
                    <tr>
                        <th data-column-id="AttachmentSetName" style="width:30%" valign="top"><span class="d-inline-block text-truncate">@Html.DisplayNameFor(model => model.AttachmentSetName)</span></th>
                        <th data-column-id="TenantName" style="width:20%" data-order="desc" valign="top">@Html.DisplayNameFor(model => model.TenantName)</th>
                        <th data-column-id="Region" style="width:15%" valign="top">@Html.DisplayNameFor(model => model.Region)</th>
                        <th data-column-id="AttachmentRedundancy" style="width:15%">@Html.DisplayNameFor(model => model.AttachmentRedundancy)</th>
                        <th data-column-id="IsHub" style="width:10%" valign="top">@Html.DisplayNameFor(model => model.IsHub)</th>
                        <th data-column-id="commands" data-sortable="false" style="width:10%" valign="top"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @for (var i = 0; i < Model.Count(); i++)
                        {
                            var item = Model.ToList()[i];
                    <tr id="gridRow_@i" data-row-id="@i">
                        <td>
                            <input type="text" name="VpnAttachmentSets[@i].AttachmentSetName" value="@item.AttachmentSetName" readonly />
                        </td>
                        <td>
                            <input type="text" name="VpnAttachmentSets[@i].TenantName" value="@item.TenantName" readonly />
                        </td>
                        <td>
                            <input type="text" name="VpnAttachmentSets[@i].Region" value="@item.Region" readonly />
                        </td>
                        <td>
                            <input type="text" name="VpnAttachmentSets[@i].AttachmentRedundancy" value="@item.AttachmentRedundancy" readonly />
                        </td>
                        <td>
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input mind-grid-checkbox" type="checkbox" id="IsHub_@i" 
                                       name="VpnAttachmentSets[@i].IsHub" checked="@item.IsHub" value="@item.IsHub">
                                <label class="custom-control-label" for="IsHub_@i"></label>
                            </div>
                        </td>
                         <td>
                            <button type="button" id="Delete_@i" class="btn btn-sm btn-secondary mind-grid-delete-row" data-row-id="@i"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>