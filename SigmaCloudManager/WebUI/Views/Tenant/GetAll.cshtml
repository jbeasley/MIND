<!-- List item selection modal messages partial view -->
@{await Html.RenderPartialAsync("_ListItemsModalMessagesPartial");}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">(function ($) {

            // Set the checked state of the checkbox for an item in the table from stored value
            // in the cookie (if present)
            var tenantId = Mind.Utilities.getCookie("tenantId");
            if (tenantId !== "") {

                var $input = $('.form-check-input[data-query-parameter = "tenantId=' + tenantId + '"]');
                if ($input.length === 1) {
                    $input[0].checked = true;
                }
            }

            // Handle click event for the cards and using the current tenant item context
            // link off to the relevant page
            $(".custom-card").click(function (e) {
                e.preventDefault();

                var $inputs = $(".form-check-input:checkbox:checked");
                if ($inputs.length === 0) {

                    // No items are checked
                    $("#selectItemModal").modal();

                }
                else if ($inputs.length > 1) {

                    // More than one checked item
                    $("#multipleItemsSelectedModal").modal();
                }
                else {

                    var href = $(this).data("href");
                    var queryParameter = $inputs.data('query-parameter');
                    window.location.href = href + queryParameter;
                }
            });

        }(jQuery));</script>
}
