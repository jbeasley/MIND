@model IEnumerable<Mind.WebUI.Models.TenantViewModel>

@{
    ViewData["Title"] = "Tenants";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item active">Tenants</li>
</ol>


@{await Html.RenderPartialAsync("_MessagingPartial");}
@{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}

<h2>Tenants</h2>

<p>
    <a asp-action="Create" mind-create-btn-link="true">Create New</a>
</p>
<table class="table table-striped table-hover mind-grid">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="mind-grid-body-scroll-md">
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="custom-control custom-checkbox">
                    <input id="tenant_checkbox_@item.TenantId" type="checkbox" class="form-check-input custom-control-input" data-query-parameter="tenantId=@item.TenantId" />
                    <label class="form-check-label custom-control-label" for="tenant_checkbox_@item.TenantId"></label>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="right">
                <a mind-grid-btn-link="true" asp-action="Edit" asp-route-tenantId="@item.TenantId">Edit</a>
                <a mind-grid-btn-link="true" asp-action="Details" asp-route-tenantId="@item.TenantId">Details</a>
                <a mind-grid-btn-link="true" asp-action="Delete" asp-route-tenantId="@item.TenantId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<hr />
