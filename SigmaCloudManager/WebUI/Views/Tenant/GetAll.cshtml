<div class="modal fade" id="selectItemModal" tabindex="-1" role="dialog" aria-labelledby="selectItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectItemModalLabel">No items are selected</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Select a tenant from the list by clicking the checkbox
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="multipleItemsSelectedModal" tabindex="-1" role="dialog" aria-labelledby="multipleItemsSelectedModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="multipleItemsSelectedModalLabel">Multiple items are selected</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Select only one tenant from the list
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        (function ($) {

            var tenantId = Mind.Utilities.getCookie("tenantId");
            if (tenantId !== "") {

                var $input = $('.form-check-input[data-query-parameter = "tenantId=' + tenantId + '"]');
                if ($input.length === 1) {
                    $input[0].checked = true;
                }
            }

            $(".custom-card").click(function (e) {
                e.preventDefault();

                var $inputs = $(".form-check-input:checkbox:checked");
                if ($inputs.length === 0) {

                    // No items are checked
                    $("#selectItemModal").modal();

                }
                else if ($inputs.length > 1) {

                    // More than one checked item
                    $("#multipleItemsSelectedModal").modal();
                }
                else {

                    var href = $(this).data("href");
                    var queryParameter = $inputs.data('query-parameter');
                    window.location.href = href + queryParameter;
                }
            });

        }(jQuery));

    </script>
}
