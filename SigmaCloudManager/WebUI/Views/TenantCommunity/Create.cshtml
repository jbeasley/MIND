@model Mind.WebUI.Models.TenantCommunityRequestViewModel

@{
    ViewData["Title"] = "Create Tenant Community";
}


<div id="crumbs">
    <ul>
        <li><a href="/Home"><i class="fa fa-home" aria-hidden="true"></i></a></li>
        <li><a href="/Tenant/GetAll"><i class="fa" aria-hidden="true"></i> Tenants</a></li>
        <li><a href="/TenantCommunity/GetAllByTenantId?tenantId=@ViewBag.Tenant.TenantId"><i class="fa active" aria-hidden="true"></i>Tenant Communities - [@ViewBag.Tenant.Name]</a></li>
        <li class="active"><a href="#"><i class="fa" aria-hidden="true"></i>Create</a></li>
    </ul>
</div>

<h2>Create a Community for Tenant '@ViewBag.Tenant.Name'</h2>

<form id="createForm" asp-action="Create">
    <hr />
    @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
    <input type="hidden" asp-for="TenantId" value="@ViewBag.Tenant.TenantId" />
    <div class="form-group row">
        <label asp-for="AutonomousSystemNumber" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="AutonomousSystemNumber" class="form-control" />
            <span asp-validation-for="AutonomousSystemNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Number" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <div class="custom-control custom-checkbox">
                <input class="form-check-input custom-control-input" type="checkbox" asp-for="AllowExtranet" data-toggle="tooltip" title="Enable the community to participate in extranet services">
                <label class="form-check-label custom-control-label" asp-for="AllowExtranet"></label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IpRoutingBehaviour" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="IpRoutingBehaviour" class="form-control" asp-items="ViewBag.IpRoutingBehaviour" data-toggle="tooltip"
                    title="Select the routing behaviour required for the community" data-placement="right">
                <option disabled value="">-- Select IP Routing Behaviour --</option>
            </select>
            <span asp-validation-for="IpRoutingBehaviour" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TenantEnvironment" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="TenantEnvironment" class="form-control" asp-items="ViewBag.TenantEnvironment" data-toggle="tooltip"
                    title="Select the environment required for communitiy" data-placement="right">
                <option value="">-- Select Environmnet --</option>
            </select>
            <span asp-validation-for="TenantEnvironment" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" id="Create" class="btn btn-success" asp-action="Create" is-create-button></button>
        </div>
    </div>
</form>

<div>
    <a mind-nav-link-back-btn="true" asp-action="GetAllByTenantID" asp-route-tenantID="@ViewBag.Tenant.TenantId">Back to Tenant Communities</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        (function ($) {

            // Initialise all tool-tips
            $('[data-toggle="tooltip"]').tooltip();

        }(jQuery));

    </script>
}