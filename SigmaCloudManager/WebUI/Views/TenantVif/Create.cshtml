@model SCM.Models.ViewModels.TenantVifRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/TenantAttachment/GetAllByTenantID?tenantID=@ViewBag.Attachment.TenantID">Tenant Attachments - [@ViewBag.Attachment.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/TenantVif/GetAllByAttachmentID/@ViewBag.Attachment.AttachmentID">Tenant VIFs - [@ViewBag.Attachment.Name]</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>

<h2>Create Tenant VIF for Attachment '@ViewBag.Attachment.Name'</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
        <input type="hidden" asp-for="AttachmentID" value="@ViewBag.Attachment.AttachmentID" />
        <input type="hidden" id="AttachmentIsMultiPort" value="@ViewBag.Attachment.IsMultiPort.ToString()" />
        @if (ViewBag.Attachment.IsMultiPort)
        {
            <input type="hidden" id="CountOfMultiPortMembers" value="@ViewBag.Attachment.CountOfMultiPortMembers" />
        }
        <div class="form-group">
            <label asp-for="Tenant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantID" class="form-control" asp-items="ViewBag.TenantID">
                    <option value="">-- Select Tenant --</option>
                </select>
                <span asp-validation-for="TenantID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VifRole" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="VifRoleID" class="form-control" asp-items="ViewBag.VifRoleID">
                    <option value="">-- Select a Role --</option>
                </select>
                <span asp-validation-for="VifRoleID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContractBandwidthPool" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ContractBandwidthPoolID" class="form-control" asp-items="ViewBag.ContractBandwidthPoolID" 
                        data-toggle="tooltip" data-placement="right" title="Select a Contract Bandwidth Pool if you wish to share bandwidth with another VIF">
                    <option value="">Select Contract Bandwidth Pool</option>
                </select>
                <span asp-validation-for="ContractBandwidthPoolID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContractBandwidth" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ContractBandwidthID" class="form-control" asp-items="ViewBag.ContractBandwidthID"
                         data-toggle="tooltip" data-placement="right" title="Select a Contract Bandwidth if you wish to dedicate bandwidth to this VIF">
                    <option value="">Select Contract Bandwidth</option>
                </select>
                <span asp-validation-for="ContractBandwidthID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <label class="checkbox-inline">
                    <input type="checkbox" asp-for="TrustReceivedCosDscp"
                           data-toggle="tooltip" title="Trust the COS and DSCP markings received in packets on this VIF"> <label asp-for="TrustReceivedCosDscp"></label>
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <label class="checkbox-inline">
                    <input type="checkbox" asp-for="AutoAllocateVlanTag"
                           data-toggle="tooltip" title="Check to request an automatically allocated vlan tag"> <label asp-for="AutoAllocateVlanTag"></label>
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RequestedVlanTag" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RequestedVlanTag" class="form-control" />
                <span asp-validation-for="RequestedVlanTag" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <label class="checkbox-inline">
                    <input type="checkbox" asp-for="IsLayer3" data-toggle="tooltip" title="Enable for Layer 3"> <label asp-for="IsLayer3"></label>
                </label>
            </div>
        </div>
        <div id="L3Components1">
            <div class="form-group">
                <label asp-for="IpAddress1" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IpAddress1" class="form-control" />
                    <span asp-validation-for="IpAddress1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SubnetMask1" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SubnetMask1" class="form-control" />
                    <span asp-validation-for="SubnetMask1" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div id="L3Components2">
            <div class="form-group">
                <label asp-for="IpAddress2" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IpAddress2" class="form-control" />
                    <span asp-validation-for="IpAddress2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SubnetMask2" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SubnetMask2" class="form-control" />
                    <span asp-validation-for="SubnetMask2" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div id="L3Components4">
            <div class="form-group">
                <label asp-for="IpAddress3" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IpAddress3" class="form-control" />
                    <span asp-validation-for="IpAddress3" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SubnetMask3" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SubnetMask3" class="form-control" />
                    <span asp-validation-for="SubnetMask3" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IpAddress4" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IpAddress4" class="form-control" />
                    <span asp-validation-for="IpAddress4" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SubnetMask4" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SubnetMask4" class="form-control" />
                    <span asp-validation-for="SubnetMask4" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="Create" class="btn btn-success" asp-action="Create">
                    <span class="glyphicon glyphicon-plus"></span>&nbsp;Create
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByAttachmentID" asp-route-id = "@ViewBag.Attachment.AttachmentID">Back to Tenant VIFs List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
    <script type="text/javascript">

        (function ($) {

            var $isLayer3 = $('#IsLayer3'),
            isLayer3 = $isLayer3[0],
            $contractBandwidthPool = $('#ContractBandwidthPoolID'),
            contractBandwidthPool = $contractBandwidthPool[0],
            $contractBandwidth = $('#ContractBandwidthID'),
            contractBandwidth = $contractBandwidth[0],
            $tenant = $('#TenantID'),
            tenant = $tenant[0],
            $autoAllocateVlanTag = $('#AutoAllocateVlanTag'),
            autoAllocateVlanTag = $autoAllocateVlanTag[0];
            $requestedVlanTag = $('#RequestedVlanTag'),
            requestedVlanTag = $requestedVlanTag[0],
            $attachmentID = $('#AttachmentID'),
            attachmentID = $attachmentID[0],
            $attachmentIsMultiPort = $('#AttachmentIsMultiPort'),
            attachmentIsMultiPort = $attachmentIsMultiPort[0],
            $l3Components1 = $('#L3Components1'),
            $l3Components2 = $('#L3Components2'),
            $l3Components4 = $('#L3Components4');

            // Initialise all tool-tips

            $('[data-toggle="tooltip"]').tooltip();

            if (autoAllocateVlanTag.checked) {

                requestedVlanTag.value = null;
                requestedVlanTag.disabled = true;
            }
            else {

                requestedVlanTag.disabled = false;
            }

            $autoAllocateVlanTag.on('click', function (e) {

                if (this.checked) {

                    requestedVlanTag.value = null;
                    requestedVlanTag.disabled = true;
                }
                else {

                    requestedVlanTag.disabled = false;
                }
            });

            showHideL3Components();

            $isLayer3.on('click', function (e) {

                showHideL3Components();

                if (!this.checked) {

                    // Clear any IP address and subnet mask information from the controls
                    // to prevent it being sent to the server

                    $l3Components1.find(":input").val('');
                    $l3Components2.find(":input").val('');
                    $l3Components4.find(":input").val('');
                }
            });

            $tenant.on('change', function (e) {

                var tenantID = this.value;

                // Disable drop-down for Contract Bandwidth Pools whilst data 
                // is being fetched

                $contractBandwidthPool[0].disabled = true;

                $.get("/Vif/ContractBandwidthPools", {
                    tenantID: tenantID,
                    attachmentID: attachmentID.value,
                    attachmentIsMultiPort: attachmentIsMultiPort.value
                })
                    .done(function (data) {

                        $contractBandwidthPool[0].disabled = false;
                        $contractBandwidthPool.html(data);
                    });
            });

            $contractBandwidthPool.on('change', function (e) {

                contractBandwidth.selectedIndex = 0;
            });

            $contractBandwidth.on('change', function (e) {

                contractBandwidthPool.selectedIndex = 0;
            });

            function showHideL3Components() {

                $l3Components1.fadeOut();
                $l3Components2.fadeOut();
                $l3Components4.fadeOut();

                if (!isLayer3.checked) {

                    return;
                }

                $l3Components1.fadeIn();

                if (attachmentIsMultiPort.value == 'True') {

                    $l3Components2.fadeIn();

                    var $countOfMultiPortMembers = $('#CountOfMultiPortMembers'),
                    countOfMultiPortMembers = $countOfMultiPortMembers[0];

                    if (countOfMultiPortMembers.value == 4) {

                        $l3Components4.fadeIn();
                    }
                }
            }

        }(jQuery));

    </script>
}