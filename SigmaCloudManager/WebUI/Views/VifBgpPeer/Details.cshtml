        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ipv4PeerAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ipv4PeerAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Peer2ByteAutonomousSystem)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Peer2ByteAutonomousSystem)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PeerPassword)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PeerPassword)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaximumRoutes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaximumRoutes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsBfdEnabled)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsBfdEnabled)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsMultiHop)
        </dt>
