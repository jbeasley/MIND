@model SCM.Models.ViewModels.VpnTenantIpNetworkCommunityInViewModel

@{
    ViewData["Title"] = "Delete";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/AttachmentSet/GetAllByTenantID/@Model.VpnTenantIpNetworkIn.AttachmentSet.TenantID">Attachment Sets- [@Model.VpnTenantIpNetworkIn.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantIpNetworkIn/GetAllByAttachmentSetID/@Model.VpnTenantIpNetworkIn.AttachmentSetID">Tenant Network Inbound Policy - [@Model.VpnTenantIpNetworkIn.AttachmentSet.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantIpNetworkCommunityIn/GetAllByVpnTenantIpNetworkInID/@Model.VpnTenantIpNetworkIn.VpnTenantIpNetworkInID">VPN Tenant IP Network Communities - [@Model.VpnTenantIpNetworkIn.TenantIpNetwork.CidrName]</a></li>
    <li class="breadcrumb-item active">Delete - [@Model.TenantCommunity.Name]</li>
</ol>

<h2>Remove Tenant Community '@Model.TenantCommunity.Name'</h2>
<h3>Are you sure you want to remove this Tenant Community from Tenant Network '@Model.VpnTenantIpNetworkIn.TenantIpNetwork.CidrName' ?</h3>
<div>
    <hr />
    @{await Html.RenderPartialAsync("_ValidationModelErrorPartial");}
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenantCommunity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenantCommunity.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VpnTenantIpNetworkCommunityInID" />
        <input type="hidden" asp-for="VpnTenantIpNetworkInID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <button type="submit" id="Delete" class="btn btn-info btn-danger" asp-action="Delete">
                <span class="glyphicon glyphicon-remove"></span>&nbsp;Remove
            </button> |
            <a asp-action="GetAllByVpnTenantIpNetworkInID" asp-route-id="@Model.VpnTenantIpNetworkInID">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}